@page
@model Todo.WebApp.Pages.TodoModel
@{
    ViewData["Title"] = "Todo List";
}

<h2>Todo List</h2>

<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#todoModal"
        onclick="openCreateModal()">
    + Add Todo
</button>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Detail</th>
            <th>Created At</th>
            <th>Finished At</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Todos != null)
        {
            @foreach (var todo in Model.Todos)
            {
                <tr>
                    <td>@todo.TodoDetail</td>
                    <td>@todo.CreatedAt.ToShortDateString()</td>
                    <td>@todo.FinishedAt.ToShortDateString()</td>
                    <td>@todo.Status.Status</td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Modal for Add/Edit -->
<div class="modal fade" id="todoModal" tabindex="-1" aria-labelledby="todoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="todoModalLabel">Add Todo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Detail</label>
                        <input type="text" class="form-control" asp-for="Todo.TodoDetail" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Created At</label>
                        <input type="date" class="form-control" asp-for="Todo.CreatedAt" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Finished At</label>
                        <input type="date" class="form-control" asp-for="Todo.FinishedAt" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" asp-for="Todo.Status.Id" asp-items="@(new SelectList(Model.Statuses, "Id", "Status"))">
                            <option value="">-- Select --</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="todoModal" tabindex="-1" aria-labelledby="todoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="todoForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="todoModalLabel">Add/Edit Todo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="todoId" />
                    <div class="mb-3">
                        <label for="todoTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" name="Title" id="todoTitle" required />
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="IsCompleted" id="todoCompleted" />
                        <label class="form-check-label" for="todoCompleted">Completed</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openCreateModal() {
        document.getElementById("todoModalLabel").innerText = "Add Todo";
    }
</script>
